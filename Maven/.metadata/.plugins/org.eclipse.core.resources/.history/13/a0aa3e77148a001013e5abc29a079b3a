	}
	public void loginButton() throws Exception{
		Thread.sleep(2000);
		  driver.findElement(login).click();
	}
	public void Contact() throws Exception{
		Thread.sleep(2000);
		  driver.findElement(Contact).click();
	}
	public void Contact_Name(String Cn) throws Exception {
		Thread.sleep(2000);
		  driver.findElement(Contact_Name).sendKeys(Cn);
